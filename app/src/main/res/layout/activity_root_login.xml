<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.erick.footapphuanuco.RootLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:background="@color/Colorfacebook"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bienvenido Administrador"
            android:textColor="#fff"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="No comparta su cuenta  con los demas"
            android:textColor="#fff"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncrearuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/MaterialGreen"
                android:onClick="rootgo"
                android:text="Consigue una cuenta"
                android:textColor="#fff"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btningresaruser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/MaterialGreen"
                android:onClick="rootgo"
                android:text="INGRESA CON UNA CUENTA"
                android:textColor="#fff"
                android:textSize="12dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextoEmail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="20dp"
            android:hint="Ingrese su Email" />

        <EditText
            android:id="@+id/editTextoContraseña"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="20dp"
            android:hint="Ingrese su Contraseña"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnRootIngresar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/butonstylepink"
            android:text="Ingresar"
            android:onClick="rootgo"

            android:textColor="#fff" />


    </LinearLayout>


</LinearLayout>
