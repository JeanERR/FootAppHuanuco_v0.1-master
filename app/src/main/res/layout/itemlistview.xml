<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageViewUsuario"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:srcCompat="@color/Colorfacebook" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNom"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Nombre" />

            <TextView
                android:textColor="#000000"
                android:textSize="18dp"
                android:drawableLeft="@drawable/dinero"
                android:id="@+id/textPre"
                android:paddingTop="6dp"
                android:drawablePadding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Precio" />

            <TextView
                android:textColor="#000000"
                android:textSize="18dp"
                android:id="@+id/textLug"
                android:drawableLeft="@drawable/lugar"
                android:paddingTop="6dp"
                android:drawablePadding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Lugar" />

            <TextView
                android:textColor="#000000"
                android:textSize="18dp"
                android:id="@+id/textCat"
                android:paddingTop="12dp"
                android:drawablePadding="6dp"
                android:drawableLeft="@drawable/catergoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Categoria" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>